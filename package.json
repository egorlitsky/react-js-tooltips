{
  "name": "react-js-tooltips",
  "version": "1.2.0",
  "description": "A powerful and flexible ReactJS library for adding customizable tooltips to your web application.",
  "private": false,
  "homepage": "https://github.com/egorlitsky/react-js-tooltips",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egorlitsky/react-js-tooltips.git"
  },
  "bugs": {
    "url": "https://github.com/egorlitsky/react-js-tooltips/issues"
  },
  "keywords": [
    "react",
    "reactjs",
    "react-js",
    "tooltip",
    "tooltips",
    "tooltip-component",
    "ui",
    "typescript",
    "react-component",
    "react-library",
    "overlay",
    "popover",
    "hint",
    "helper"
  ],
  "author": "Vladislav Egorlitskii",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.7.2",
    "zustand": "^5.0.1"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run copy-css",
    "copy-css": "mkdir -p dist/core && cp src/core/*.module.css dist/core/ && cp src/core/*.css dist/core/ || true",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "prettier": "^3.6.2",
    "typed-css-modules": "^0.9.1"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  }
}
